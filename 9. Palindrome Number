class Solution(object):
    def isPalindrome(self, x):
        """
        :type x: int
        :rtype: bool
        """
        if x<0 or (x!=0 and x%10==0):
            return False
        sum = 0
        x_copy = x
        while x_copy!=0:
            d = x_copy%10
            sum = sum*10+ d
            x_copy /= 10
        return x == sum or x == sum/10
